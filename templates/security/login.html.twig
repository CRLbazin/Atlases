{% extends 'base.html.twig' %}

{% block stylesheets %}
	{{ parent() }}	
{% endblock %}

{% block body %}
	<div class="mt-5 mb-5">
		<div class="container">
			<div class="row justify-content-center">
				<div class="col-lg-5">
					<div class="card">

						<!-- Logo -->
						<div class="card-header pt-2 pb-2 text-center bg-primary" >
							<span><img src="{{ asset('img/white_logo_transparent_background.png')}}" alt="" height="85"></span>
						</div>

						<div class="card-body p-4">
							<div class="text-center w-75 m-auto">
								<h4 class="text-dark-50 text-center mt-0 font-weight-bold">{{ 'security.signin' | trans }}</h4>
								<p class="text-muted mb-4">{{ 'security.signin.introduction' | trans }}.</p>
							</div>

							<!-- Erros -->
							{% if error %}
								<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
							{% endif %}

							<form method="post">
								<!-- Email -->
								<div class="form-group">
									<label for="emailaddress">{{ 'email' | trans }}</label>
									<input class="form-control" type="email" id="emailaddress" required="" placeholder="{{ 'email.placeholder' | trans }}">
								</div>

								<!-- Password -->
								<div class="form-group">
									<label for="password">{{ 'password' | trans }}</label>
									<input class="form-control" type="password" required="" id="password" placeholder="{{'password.placeholder' | trans}}">																		
								</div>

								<!-- Remember me -->
								<div class="form-group mb-3">
									<div class="custom-control custom-checkbox">
										<input type="checkbox" class="custom-control-input" id="checkbox-signin" checked>
										<label class="custom-control-label" for="checkbox-signin">{{ 'security.rememberme' | trans }}</label>
									</div>
								</div>

								<!-- Submit -->
								<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}" >
								<div class="form-group mb-0 text-center">
									<button class="btn btn-primary" type="submit"> {{ 'security.login' | trans }} </button>
								</div>
							</form>
						</div> <!-- end card-body -->
					</div> <!-- end card -->

					<div class="row mt-3">
						<div class="col-12 text-center">
							<p class="text-muted">{{ 'password.forgotten' | trans }}</p>
							<p class="text-muted">{{ 'security.no-account' | trans }} ? <a href="pages-register.html" class="ml-1 text-primary"><b>{{ 'security.register' | trans }}</b></a></p>
						</div> <!-- end col -->
					</div> <!-- end row -->

				</div> <!-- end col -->
			</div> <!-- end row -->
		</div> <!-- end container -->
	</div>
{% endblock %}
